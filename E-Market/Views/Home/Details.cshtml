@using E_Market.Core.Application.ViewModel.Categories;
@model E_Market.Core.Application.ViewModel.Comercials.SaveComercialViewModel;



<div class="row d-flex">

    <div class="row d-flex justify-content-center">
        <div class="col-12 col-md-10">
            <div class="card bg-dark border border-5 border-danger">
                <div class="card-body">
                    <div>
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="@Model.comercialImage1" alt="@Model.comercialName img">
                                </div>
                                @if (Model.comercialImage2 != null || Model.comercialImage2 != " ")
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="@Model.comercialImage2" alt="@Model.comercialName img 2">
                                    </div>
                                }
                                @if (Model.comercialImage3 != null || Model.comercialImage3 != " ")
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="@Model.comercialImage3" alt="@Model.comercialName img 3">
                                    </div>
                                }
                                @if (Model.comercialImage4 != null || Model.comercialImage4 != " ")
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="@Model.comercialImage4" alt="@Model.comercialName img 4">
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    <div class="mt-5">
                        <ul>
                            <li>ID: @Model.id</li>
                            <li>Name: @Model.comercialName</li>
                            <li>Description: @Model.comercialDesciption</li>
                            <li>Date: @Model.comercialDate</li>
                            <li>Comercial Category: @Model.categoryName</li>
                            <li>User Name: @Model.userName</li>
                            <li>User phone: @Model.userPhone</li>
                            <li>User Email: @Model.userEmail</li>

                        </ul>
                    </div>
                    <div>
                        <a class="btn btn-outline-info" asp-controller="Home" asp-action="Index">go back <i class="bi bi-arrow-left-square"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

